{
    "compilerOptions": {
        "baseUrl": "./src", // srcディレクトリをベースにする
        "paths": {
            "*": ["*"]
        },
        "moduleResolution": "node",
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES6",
        "outDir": "./dist"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "typedocOptions": {
        "entryPoints": ["./src"],
        "out": "docs"
    }
}
